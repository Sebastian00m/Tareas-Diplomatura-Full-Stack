<div class="container" style="margin:100px auto">
    <div class="row">
        <form action="/admin/novedades/agregar" method="post">
            <div class="mb-3 row">
                <input type="text" class="form-control" placeholder="Nombre del curso" name="curso">
            </div>
            <div class="mb-3 row">
                <input type="number" class="form-control" placeholder="Precio del curso" name="precio">
            </div>
            <div class="mb-3 row">
                <input type="number" class="form-control" placeholder="Cantidad de alumnos" name="calumnos">
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>