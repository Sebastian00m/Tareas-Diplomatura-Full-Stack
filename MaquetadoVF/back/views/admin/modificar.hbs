<div class="container" style="margin:100px auto">
    <div class="row">
        <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <input type="hidden" class="form-control" value="{{novedad.id}}" name="id">
            </div>
            <div class="mb-3 row">
                <input type="text" class="form-control" value="{{novedad.curso}}" name="curso">
            </div>
            <div class="mb-3 row">
                <input type="number" class="form-control" value="{{novedad.precio}}" name="precio">
            </div>
            <div class="mb-3 row">
                <input type="number" class="form-control" value="{{novedad.calumnos}}" name="calumnos">
            </div>
            <div class="mb-3 row">
                <p>
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"/></label>
                </p>
                <p>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> 
                        Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </p>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
         {{#if error}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>